{
    "configurations": [
        {
            "name": "Compiler - Library",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/snc.exe",
            "args": [
                "--input-file",
                "${workspaceFolder}/SeanetSamples/Libraries/ParsingTests/ParsingTest.sn",
                "--output-file",
                "${workspaceFolder}/bin/output/ParsingTestsLibrary/ParsingTest.dll",
                "--library",
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "preLaunchTask": "dotnet: build",
        },
        {
            "name": "Compiler - Executable",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/snc.exe",
            "args": [
                "--input-file",
                "${workspaceFolder}/samples/Applications/HelloWorld/Hello.sn",
                "--output-file",
                "${workspaceFolder}/bin/output/HelloWorld/HelloWorld.exe",
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "preLaunchTask": "dotnet: build",
        },
    ]
}